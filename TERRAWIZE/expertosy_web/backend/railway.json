{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "healthcheckInterval": 15,
    "healthcheckRetries": 3,
    "numReplicas": 1,
    "startCommand": "gunicorn --bind \"0.0.0.0:8080\" --workers 4 --worker-class gevent --timeout 120 --keep-alive 65 --log-file=- --access-logfile=- --error-logfile=- --log-level=info app:app",
    "envs": {
      "FLASK_ENV": "production",
      "PYTHONUNBUFFERED": "1",
      "GUNICORN_CMD_ARGS": "--access-logfile=- --error-logfile=- --log-level=info",
      "PORT": "8080"
    }
  }
} 